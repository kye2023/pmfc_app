<% if lCname.blank? %>
<%= content_tag :option, "No record found..." %>
<% else %>
    <% cusrID = current_user.user_detail.branch_id %>
    <%= content_tag :option, "Select Center" %>
  <% @load_cnames.each do |lcnm| %>
    <% if current_user.admin? %>
      <%= content_tag :option, lcnm.description, value: lcnm.id %>
    <% else %>
      <% if lcnm.branch_id == cusrID %>
      <%= content_tag :option, lcnm.description, value: lcnm.id %>
      <% end %>
    <% end %>
  <% end %>
<% end %>