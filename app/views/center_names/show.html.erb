<%# render @center_name %>
<div class="card">
  <div class="card-body">
    <%= render @center_name %>
  </div>
  <div class="card-footer">
    <%= link_to '<i class="bi bi-arrow-bar-left"></i>'.html_safe, center_names_path, class: 'btn btn-secondary btn-sm' %>
  </div>
</div>

