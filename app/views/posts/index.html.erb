<%= content_tag :h1, "List of Posts" %>


<div class="text-end mb-3">
  <%= link_to new_post_path, class: 'btn btn-primary' do %>
    New Post
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>

        <th scope="row"><%= post.id %></th>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
    
          <td>
            <%= link_to 'View', post, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", post, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
