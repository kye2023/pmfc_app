<%= render "remote_modal", title: "Import Coverages" do %>
  <%= form_with url: import_batches_path(p: @batch.id), method: :post do |form| %>
    <%= form.label :file, "For coverages enrollment upload your csv file.", class: "form-text" %>
    <div class="d-flex gap-3">
      <%= form.file_field :file, 
        class: "form-control", 
        style: "width: 80%"
      %>
      <%= submit_tag 'Upload', 
        class: "btn btn-primary btn-sm"
      %>
    </div>
  <% end %>
<% end %>

