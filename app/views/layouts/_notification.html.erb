<% flash.each do |flash_type, message| %>
  <div class="toast-container position-absolute top-0 end-0 pe-3 pt-3">
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header text-white bg-<%= flash_type == 'notice' ? 'success' : 'danger' %>" >
        <strong class="me-auto"><%= flash_type == 'notice' ? 'Notice' : 'Alert' %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body text-center">
            <%= message %>
      </div>
    </div>
  </div>
<% end %>

