<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="card col-6" style="margin: auto">
  <h2 class="card-header">Sign up</h2>
  <div class="card-body">
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <hr>
      <%= f.simple_fields_for :user_detail do |ud| %>
        <div class="row">
          <%= ud.input :last_name, wrapper_html: { class: "col-md-4" } %>
          <%= ud.input :first_name, wrapper_html: { class: "col-md-4" } %>
          <%= ud.input :middle_initial, wrapper_html: { class: "col-md-4" } %>
          <%= ud.input :gender, collection: ['Male', 'Female'], wrapper_html: { class: "col-md-6"} %>
          <%= ud.input :contact_no, wrapper_html: { class: "col-md-6"} %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary" %>

      </div>

  </div>
  <div class="card-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>



