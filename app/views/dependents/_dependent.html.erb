<div id="<% dom_id dependent %>">
  <div class="row">
    
    <div class="col-lg-12">
      <div class="mt-4 p-5 bg-secondary text-white rounded" id="<%= dom_id dependent %>">
        <h1 class="text-truncate"><%= dependent.full_name %></h1>
        <div class="text-wrap fw-lighter">
          <strong>Birth date: </strong><%= "#{dependent.get_formatted_dbday} ("+"#{@member.compute_member_age(dependent.birth_date)})" %>
        </div>
        <div class="text-wrap fw-lighter"><strong>Civil status: </strong><%= dependent.civil_status %></div>
        <div class="text-wrap fw-lighter"><strong>Gender: </strong><%= dependent.gender %></div>
        <div class="text-wrap fw-lighter"><strong>Mobile no: </strong><%= dependent.mobile_no %></div>
        <div class="text-wrap fw-lighter"><strong>Email: </strong><%= dependent.email %></div>
        <div class="text-wrap fw-lighter">Relation: <strong>(<%= dependent.relationship.upcase %>)</strong></div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card-body">
      <table class="table table-striped table-bordered table-hover table-sm">
        <thead>
          <tr>
            <th>#</th>
            <th>Coverage</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th width="5%"><%= dependent.dependent_coverage.id %></th>
            <td>
              <% dependent_prem =  dependent.dependent_coverage.premium %>
              <div class="text-wrap fw-light text-muted">
                <span class="badge bg-muted text-dark">
                   <small>
                    LIFE: <%= to_curr(dependent.dependent_coverage.group_benefit.life) %> <br> 
                    ADD: <%= to_curr(dependent.dependent_coverage.group_benefit.add) %> <br> 
                    BURIAL: <%= to_curr(dependent.dependent_coverage.group_benefit.burial) %>
                  </small>
                </span> 
              </div>
              <div class="text-wrap fw-light text-muted">
                <span class="badge bg-muted text-dark">
                  <small>Premium: <%= to_curr(dependent_prem) %></small>
                </span> 
              </div>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>
      
  </div>
</div>
