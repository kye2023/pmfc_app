
<%= simple_form_for(@group_benefit) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :member_type %>
    <%= f.input :residency_floor %>
    <%= f.input :residency_ceiling %>
    <%= f.input :life %>
    <%= f.input :add %>
    <%= f.input :burial %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn_primary" %>
  </div>
<% end %>
