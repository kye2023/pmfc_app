<%# content_tag :h1, "List of Members" %>


<div class="card mb-3">
  <div class="card-header">Member Module</div>
  <div class="card-body">
      <div class=" row">
        <div class="col-lg-4"></div>
        <!--Upload Member-->
        <div class="col-lg-4">
          <%= form_with url: import_members_path, method: :post do |form| %>
              <%= form.label :file, "For member enrollment upload your csv file.", class: "form-text" %>
              <div class="d-flex gap-3">
                <%= form.file_field :file, 
                  class: "form-control", 
                  style: "width: 80%"
                %>
                <%= submit_tag 'Upload', 
                  class: "btn btn-primary btn-sm"
                %>
              </div>
            <% end %>
        </div>
        <!--Upload Member-->
        <div class="col-lg-4"></div>
      </div> 
    </div>     
</div>

<div class="container mt-3">
  <div class="row">
  <!--Add Member-->
  <div class="col-lg-6 text-start mb-3">
    <%= link_to new_member_path, data: { turbo_frame:"remote_modal" }, class: 'btn btn-primary' do %>
      New Member
    <% end %>
  </div>
  <!--Add Member-->
  <!--Search-->
  <div class="col-lg-6">
    <%= form_with( url: members_path, method: :get, data: {turbo_frame: "search_member"} ) do |form| %>
      <div class="input-group mb-3">
        <%= form.text_field :query, placeholder: 'Search by last name...', class: "form-control" %>
        <%= form.submit 'Search', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <!--Search-->
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Member Info</th>
        <th>LPPI</th>
        <th>GYRT</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% 
        mbrcount = 0
        mbr_dependent= 0
        @members.each do |member| 
          mbrcount += 1
          mbr_dependent = member.count_dependent
      %>
      <tr id="members">
        <th scope="row"><%= mbrcount %></th>
        <td>
          <div class="text-wrap fw-lighter"><small>Name: <%= member.get_cmember %></small></div>
          <div class="text-wrap fw-lighter"><small>Birth Date: <%= member.get_formatted_bday %></small></div>
          <div class="text-wrap fw-lighter"><small>Date of Membership: <%= member.get_formatted_membership %></small></div>
          <div class="text-wrap fw-lighter"><small>CS: <%= member.civil_status %> | Gender: <%= member.gender %></small></div>
        </td>
        <td>
          <% member.coverages.each do |cvg| %>
          <div class="text-wrap fw-lighter"><small>Loan Amount: <%= to_curr(cvg.loan_coverage) %></small></div>
          <div class="text-wrap fw-lighter"><small>Premium: <%= cvg.loan_premium %></small></div>
          <% end %>
        </td>
        <td>
           <% member.coverages.each do |cvg| %>
            <div class="text-wrap fw-lighter"><small>Dependent(s): <%= mbr_dependent %></small></div>
            <% 
              dcvgsum = 0 
              member.dependents.each do |dcvg| 
              dcvgsum += dcvg.dependent_coverage.premium 
            %>
            <% end %>
            <div class="text-wrap fw-lighter"><small>Premium: <%= to_curr(dcvgsum) %></small></div>
           <% end %>
        </td>
        <td>
          <%= link_to '<i class="bi bi-eye-fill"></i>'.html_safe, member, class: 'btn btn-secondary btn-sm ' %>
          <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_member_path(member), class: 'btn btn-secondary btn-sm' %>
          <%= link_to '<i class="bi bi-trash"></i>'.html_safe, member, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <!--Pagination-@-Pagy-->
  <div class="mt-5">
    <% if @pagy.count > @pagy.items %>
    <div class="fw-lighter"><%== pagy_info(@pagy) %></div>
    <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
  <!--Pagination-@-Pagy-->

  </div>
</div>