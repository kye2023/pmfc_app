<%= content_tag :h1, "List of Members" %>


<div class="row">
  
  <div class="col-lg-6">
    <div class="text-start mb-3">
      <%= link_to new_member_path, data: { turbo_frame:"remote_modal" }, class: 'btn btn-primary' do %>
        New Member
      <% end %>
    </div>
    <div>
      <%= form_with url: import_members_path, method: :post do |form| %>
          <%= form.label :file, "For member enrollment upload your csv file.", class: "form-text" %>
          <div class="d-flex gap-3">
            <%= form.file_field :file, 
              class: "form-control", 
              style: "width: 80%"
            %>
            <%= submit_tag 'Upload', 
              class: "btn btn-primary btn-sm"
            %>
          </div>
        <% end %>
    </div>
  </div>

  <div class="col-lg-6">
  <!--Search-->
  <%= form_with( url: members_path, method: :get, data: {turbo_frame: "search_member"} ) do |form| %>
    <div class="input-group mb-3">
      <%= form.text_field :query, placeholder: 'Search by last name...', class: "form-control" %>
      <%= form.submit 'Search', class: "btn btn-success" %>
    </div>
  <% end %>
  <!--Search-->
  </div>

</div>


<div class="container mt-3">
<table class="table table-striped table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>#</th>
      <th>Member Info</th>
      <!--<th>Transaction</th>-->
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% 
      mbrcount = 0
      @members.each do |member| 
        mbrcount += 1
    %>
    <tr id="members">
      <th scope="row"><%= mbrcount %></th>
      <td>
        <div class="text-wrap fw-lighter">Name: <strong><%= member.get_cmember %></strong></div>
        <div class="text-wrap fw-lighter"><small> Birth Date: <%= member.get_formatted_bday %> | Membership: <%= member.get_formatted_membership %></small></div>
        <div class="text-wrap fw-lighter"><small> Dependent(s): <%= member.count_dependent %></small></div>
      </td>
      <!--<td></td>-->
      <td>
        <%= link_to 'View', member, class: 'btn btn-secondary btn-sm ' %>
        <%= link_to 'Edit', edit_member_path(member), class: 'btn btn-secondary btn-sm' %>
        <%= link_to "Delete", member, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--Pagination-@-Pagy-->
<div class="mt-5">
  <% if @pagy.count > @pagy.items %>
  <div class="fw-lighter"><%== pagy_info(@pagy) %></div>
  <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>
<!--Pagination-@-Pagy-->
</div>