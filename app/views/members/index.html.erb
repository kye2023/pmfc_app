<%# content_tag :h1, "List of Members" %>


<div class="card mb-3">
  <div class="card-header">Member Module</div>
  <div class="card-body">
      <div class=" row">
        <div class="col-lg-4"></div>
        <!--Upload Member-->
        <div class="col-lg-4">
          <%= form_with url: import_members_path, method: :post do |form| %>
              <%= form.label :file, "For member enrollment upload your csv file.", class: "form-text" %>
              <div class="d-flex gap-3">
                <%= form.file_field :file, 
                  class: "form-control", 
                  style: "width: 80%"
                %>
                <%= submit_tag 'Upload', 
                  class: "btn btn-primary btn-sm"
                %>
              </div>
            <% end %>
        </div>
        <!--Upload Member-->
        <div class="col-lg-4"></div>
      </div> 
    </div> 
</div>


  <div class="row">
    <!--Add Member-->
      <div class="col-lg-6 text-start mb-3">
        <%= link_to new_member_path, data: { turbo_frame:"remote_modal" }, class: 'btn btn-primary' do %>
          New Member
        <% end %>
      </div>
    <!--Add Member-->
    <!--Search-->
    <div class="col-lg-6">
      <%= form_with( url: members_path, method: :get, data: {turbo_frame: "search_member"} ) do |form| %>
        <div class="input-group mb-3">
          <%= form.text_field :query, placeholder: 'Search by last name...', class: "form-control" %>
          <%= form.submit 'Search', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="float-end">
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  </div>
  <!--Search-->
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Member Info</th>
        <th>Dependent</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
      <tr id="members">
        <th><%= member.id %></th>
        <td>
          <strong><%= member.get_cmember %></strong> <br>
          <small class="text-muted"> Birth Date: <%= to_shortdate(member.birth_date) %> |
          Membership: <%= to_shortdate(member.date_membership) %></small>
        </td>
        <td> <small> <ol><% member.dependents.each do |d| %>
                <li><%= d.full_name %> (<%= d.relationship %>)</li>
              <% end %></ol></small>
        </td>
        <td>
          <%= link_to '<i class="bi bi-eye-fill"></i>'.html_safe, member, class: 'btn btn-secondary btn-sm ' %>
          <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_member_path(member), class: 'btn btn-secondary btn-sm' %>
          <%= link_to '<i class="bi bi-trash"></i>'.html_safe, member, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>



