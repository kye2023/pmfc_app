<% rcvgt %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th colspan="5">SGYRT <%= link_to '<i class="bi bi-trash"></i>'.html_safe, @coverage, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?, this will delete all plan for this coverage." } %></th>
      </tr>
      <tr>
        <th>Details</th>
        <th class="text-center">Life</th>
        <th class="text-center">Accidental</th>
        <th class="text-center">Burial</th>
        <th class="text-center">Premium</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Principal</td>
        <td class="text-center"><%= to_curr(rcvgt.group_benefit.life) %></td>
        <td class="text-center"><%= to_curr(rcvgt.group_benefit.add) %></td>
        <td class="text-center"><%= to_curr(rcvgt.group_benefit.burial) %></td>
        <td class="text-center"><%= to_curr(rcvgt.group_premium) %></td>
      </tr>
      <% rcvgt.dependent_coverages.each do |dc| %>
      <tr class="table-secondary">
        <td><small><%= dc.dependent %></small><span class="badge bg-light text-dark"><%= dc.dependent.relationship %></span></td>
        <td class="text-center"><%= to_curr(dc.group_benefit.life) %></td>
        <td class="text-center"><%= to_curr(dc.group_benefit.add) %></td>
        <td class="text-center"><%= to_curr(dc.group_benefit.burial) %></td>
        <td class="text-center"><%= to_curr(dc.premium) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>